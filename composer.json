{
  "config": {
    "vendor-dir": "Vendor"
  },
  "require": {
    "openpay/sdk": "dev-master",
    "conekta/conekta-php": "^4.0",
    "dompdf/dompdf": "^0.8.3",
    "phpmailer/phpmailer": "^6.0",
    "chillerlan/php-qrcode": "^3.0",
    "box/spout": "^2.7",
    "twig/twig": "^2.7",
    "vlucas/phpdotenv": "^3.3",
    "fortawesome/font-awesome": "^5.8",
    "twbs/bootstrap": "^4.3",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-simplexml": "*"
  },
  "scripts": {
    "post-update-cmd": [
      "rm -rf Public/assets/bootstrap",
      "rm -rf Public/assets/fontawesome",
      "mkdir Public/assets/bootstrap",
      "mkdir Public/assets/fontawesome",
      "mv Vendor/twbs/bootstrap/dist/css Public/assets/bootstrap/css",
      "mv Vendor/twbs/bootstrap/dist/js Public/assets/bootstrap/js",
      "mv Vendor/fortawesome/font-awesome/css Public/assets/fontawesome/css",
      "mv Vendor/fortawesome/font-awesome/js Public/assets/fontawesome/js",
      "mv Vendor/fortawesome/font-awesome/webfonts Public/assets/fontawesome/webfonts"
    ]
  }
}
